{
  "compilerOptions": {
    "sourceMap": true,
    "jsx": "react",
    "declaration": true,
    "lib": ["dom", "es2015", "es2016", "es2017", "esnext"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "tsc"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}
